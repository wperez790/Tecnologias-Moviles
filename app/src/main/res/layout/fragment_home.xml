<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/ciudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textM"
        android:alpha="0.8"
        android:textColor="@color/blanco"
        style="@style/textoCentradoM"
        android:text="Córdoba"/>

    <TextView
        android:id="@+id/textoTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blanco"
        android:alpha="0.8"
        android:textSize="@dimen/textH"
        android:text="20 °C"
        android:layout_margin="@dimen/marginM"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/logoL"
        android:textSize="@dimen/textM"
        android:textColor="@color/blanco"
        android:text="Despejado"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/marginM"
        android:alpha="0.8">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"
            android:textSize="@dimen/textM"
            android:text="Detalles"
            android:layout_margin="@dimen/marginL"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanco"
                    android:textSize="@dimen/textM"
                    android:text="Viento"
                    android:layout_margin="@dimen/marginL"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blanco"
                    android:textSize="@dimen/textM"
                    android:text="9.3 Km/h"
                    android:layout_margin="@dimen/marginL"
                    />

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textColor="@color/blanco"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blanco"
                android:textSize="@dimen/textM"
                android:text="Humedad"
                android:layout_margin="@dimen/marginL"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textM"
                android:text="60%"
                android:textColor="@color/blanco"
                android:layout_margin="@dimen/marginL"
                />

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/marginM">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textM"
                android:text="Descripcion"
                android:layout_margin="@dimen/marginL"
                android:textColor="@color/blanco"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textM"
                android:textColor="@color/blanco"
                android:text="Despejado clara visibilidad, vientos leves."
                android:layout_margin="@dimen/marginL"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>